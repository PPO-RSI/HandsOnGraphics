<RSIMimic x:Class="PPO170117_2.ControlSchemeScreen"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          Background="LightGray"
	      Height="1048"
          Width="1920"
          mc:Ignorable="d">
    <RSICanvas>
		<!-- Graphic -->
        <TextBlock FontSize="72"
                   Text="ControlSchemeScreen" />

        <!--  FOD Part  -->
        <RSICanvas x:Name="FOD"
                Visibility="{FODBinding}" d:IsLocked="True"/>

        <!--  Battery Limit Part  -->
        <RSICanvas x:Name="BL"
                Visibility="{BLBinding}" d:IsLocked="True"/>

        <!--  FAILURE Part  -->
        <RSICanvas x:Name="FAILURE"
                Visibility="{FAILUREBinding}" d:IsLocked="True"/>

    </RSICanvas>
</RSIMimic>